page {
  background-color: #f5f5f5;
}

.container {
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
}

.nav_title {
  font-weight: 600;
  color: #333333;
  font-size: 40rpx;
  line-height: 56rpx;
}

.content {
  flex: 1;
  width: 100%;
  height: 1000rpx;
  box-sizing: border-box;
  padding: 0 24rpx;
}

/* 红包 */
.coupon {
  display: flex;
  align-items: center;
  height: 66rpx;
  padding: 0 32rpx;
  margin-bottom: 24rpx;
  background-color: rgba(229, 53, 47, 0.1);
  border-radius: 32rpx;
}

.coupon_img {
  width: 66rpx;
  height: 40rpx;
  color: #ffffff;
  font-size: 20rpx;
  line-height: 40rpx;
  text-align: center;
  margin-right: 16rpx;
  background-size: 100% 100%;
}

.coupon_text {
  flex: 1;
  color: #e5352f;
  font-size: 24rpx;
  line-height: 40rpx;
}

.coupon_arrow_right {
  width: 16rpx;
  height: 28rpx;
}


/* 空状态 */
.not_list {
  width: 702rpx;
  height: 640rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0rpx 8rpx 16rpx rgba(0, 0, 0, 0.01);
}

.to_browse {
  width: 236rpx;
  height: 72rpx;
  font-weight: 600;
  color: #e5352f;
  font-size: 28rpx;
  line-height: 72rpx;
  text-align: center;
  /* margin: 64rpx auto 0; */
  margin: 32rpx auto 0;
  border: 2rpx solid #e5352f;
  border-radius: 36rpx;
}

.not_login {
 padding: 72rpx 0 64rpx;
}


/* 热销好货 */
.hot_sale {
}

.hot_sale_head {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333333;
  font-size: 28rpx;
  line-height: 40rpx;
  padding: 48rpx 0;
}

.hot_icon {
  width: 40rpx;
  height: 40rpx;
}

.hot_head_line {
  width: 96rpx;
  height: 2rpx;
}

.left_line {
  margin-right: 8rpx;
  background: linear-gradient(-90deg, #ccc 0%, rgba(159, 157, 153, 0) 100%);
}

.right_line {
  margin-left: 8rpx;
  background: linear-gradient(90deg, #ccc 0%, rgba(159, 157, 153, 0) 100%);
}

.hot_list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 670rpx;
  padding: 32rpx 16rpx;
  background-color: #ffffff;
  border-radius: 16rpx 16rpx 0 0;
  box-shadow: 0rpx 2rpx 8rpx rgba(0, 0, 0, 0.02);
}


/* 底部结算 */
.footer {
  flex-grow: 0;
  flex-shrink: 0;
  width: 100%;
  height: 210rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.footer_content {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 999;
}

.settlement {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 112rpx;
  padding: 0 24rpx;
  background-color: #fff;
  border-top: 2rpx solid #eee;
  border-bottom: 2rpx solid #eee;
}

.select_all {
  color: #999999;
  font-size: 30rpx;
  line-height: 36rpx;
}

.choose_icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

.settlement_content {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.settlement_info {
  margin-right: 16rpx;
}

.price {
  font-weight: 600;
  color: #e5352f;
  font-size: 30rpx;
  line-height: 42rpx;
  text-align: right;
}

.price_desc {
  color: #666666;
  font-size: 22rpx;
  line-height: 32rpx;
  text-align: right;
}

.arrow_top {
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  margin-left: 12rpx;
  border-top: 2rpx solid #999;
  border-right: 2rpx solid #999;
  transform: rotate(-45deg) translate(-2rpx, 4rpx);
  transition: transform .3s ease-in-out;
}

.arrow_act {
  transform: rotate(135deg)
}

.settlement_btn {
  width: 224rpx;
  height: 72rpx;
  color: #ffffff;
  font-size: 30rpx;
  line-height: 72rpx;
  text-align: center;
  background-color: #e5352f;
  border-radius: 36rpx;
}