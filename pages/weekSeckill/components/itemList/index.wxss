.today,
.tomorrow {
  /* padding: 32rpx; */
}

.tab-item-wrap {
  padding: 0 32rpx 32rpx 32rpx; 
}

.tab-item {
  position: relative;
  width: 100%;
  height: 234rpx;
  display: flex;
  justify-content: center;
  margin-bottom: 32rpx;
}

.left-img {
  width: 234rpx;
  height: 234rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.right-box {
  margin-left: 16rpx;
  width: 436rpx;
  display: flex;
  flex-direction: column;
}

.title {
  width: 100%;
  /* height: 44rpx; */
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  /* line-height: 44rpx; */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
}

.progress-bar-box {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.progress-bar {
  display: flex;
  align-items: center;
  width: 290rpx;
  height: 28rpx;
  background: #FBE9E6;
  border-radius: 14rpx;
  display: flex;
  justify-content: flex-start;
}

.progress-index {
  border-radius: 14rpx;
  height: 100%;
  line-height: 28rpx;
  text-align: center;
  background: linear-gradient(90deg, #FF526F 0%, #F71F46 100%);
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
}

.progress-img {
  position: relative;
  left: -20rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}

.poor {
  position: relative;
  left: -20rpx;
  height: 100%;
  line-height: 28rpx;
  text-align: center;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #EB4A39;
}

.stock {
  width: 116rpx;
  margin-left: 8rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}


.subtitle {
  margin-top: 12rpx;
  width: 100%;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 34rpx;
}

.subtitle-t {
  margin-top: 8rpx;
  width: 100%;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 34rpx;
}

.price-box-t {
  margin-top: 56rpx;
  display: flex;
  justify-content: flex-start;
  align-items: flex-end;
}

.nearDays {
  font-size: 22rpx;
  font-weight: 400;
  color: #979797;
}

.price-box {
  margin-top: auto;
  display: flex;
  justify-content: flex-start;
  align-items: flex-end;
}

.head {
  font-size: 30rpx;
  font-family: HelveticaNeue-Bold, HelveticaNeue;
  font-weight: bold;
  color: #EB0000;
}

.money {
  font-size: 44rpx;
  font-family: HelveticaNeue-Bold, HelveticaNeue;
  font-weight: bold;
  color: #EB0000;
  line-height: 1;
}

.maxnum {
  height: 18rpx;
  line-height: 18rpx;
  border-radius: 10rpx;
  border: 1rpx solid #F41B3F;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #F41B3F;
  text-align: center;
  margin-left: 10rpx;
  padding: 2rpx 3rpx;
}
.t {
  height: 17rpx;
  font-size: 12rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #979797;
  line-height: 17rpx;
}
.btn {
  position: absolute;
  right: 0;
  bottom: 40rpx;
  width: 120rpx;
  height: 68rpx;
  line-height: 68rpx;
  background: linear-gradient(270deg, #FF001F 0%, #FF4771 100%);
  box-shadow: 1rpx 1rpx 4rpx 0rpx rgba(228, 45, 59, 0.3);
  border-radius: 34rpx;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
}

.remind {
  background: #FF738F;
  box-shadow: 1rpx 1rpx 4rpx 0rpx rgba(228, 45, 59, 0.3);
}

.reminded {
  background: #DDDDDD;
  box-shadow: 1rpx 1rpx 4rpx 0rpx rgba(0, 0, 0, 0.3);
}