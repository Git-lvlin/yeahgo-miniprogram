/* pages/login/login.wxss */
.container {
  position: relative;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  justify-content: center;
  height: 100vh;
  padding: 0 64rpx;
}

.header {
  margin-top: 60rpx;
}

.header .title {
  width: 356rpx;
  height: 80rpx;
  font-size: 56rpx;
  color: #333333;
  font-weight: 600;
  margin: 16rpx 0 120rpx 0;
}

.login_tips {
  font-size: 20rpx;
  color: #999999;
  line-height: 28rpx;
  white-space: nowrap
}

.login_tips .red_text {
  color: #E5352F ;
}

.radio_icon {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-right: 8rpx;
}

.login_btn {
  width: 100% !important;
  height: 96rpx !important;
  font-size: 32px;
  color: #FFFFFF;
  font-weight: 500;
  margin-top: 40rpx;
  border-radius: 16rpx !important;
}

.on_login {
  font-size: 28rpx;
  color: #999999;
  text-align: center;
  margin-top: 48rpx;
}

.other_login{
  height: 450rpx;
}

.env_list {
  justify-content: space-between;
  font-size: 24rpx;
  margin-top: 40rpx;
}

.env_item {
  padding-left: 24rpx;
}

.treaty {
  position: absolute;
  bottom: 80rpx;
  left: 50%;
  display: flex;
  justify-content: center;
  transform: translateX(-50%);
}