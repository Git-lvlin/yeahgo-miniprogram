.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.search_content {
  padding: 20rpx 32rpx;
}

.address_info {
  color: #333333;
  font-size: 28rpx;
  line-height: 40rpx;
  margin-right: 16rpx;
} 

.icon {
  width: 32rpx;
  height: 16rpx;
  margin-left: 8rpx;
}

.search_info {
  flex: 1;
  height: 64rpx;
  padding: 0 16rpx;
  background-color: #f5f5f5;
  border-radius: 32rpx;
}

.search_input {
  flex: 1;
  color: #333333;
  font-size: 28rpx;
  line-height: 40rpx;
  margin: 0 8rpx;
}

.clear_icon,
.search_icon {
  width: 40rpx;
  height: 40rpx;
} 


.list {
  flex: 1;
  overflow-y: auto;
}

.address_item {
  position: relative ;
  padding: 20rpx 64rpx 20rpx 32rpx;
}

.address_item:not(:last-child) {
  border: 2rpx solid #f5f5f5;
}

.company_name {
  font-weight: 500;
  color: #333333;
  font-size: 28rpx;
  line-height: 40rpx;
  margin-bottom: 4rpx;
}

.text_red {
  color: #e5352f;
}

.company_address {
  color: #999999;
  font-size: 20rpx;
  line-height: 28rpx;
}

.select_icon {
  position: absolute;
  top: 38rpx;
  right: 32rpx;
  width: 40rpx;
  height: 40rpx; 
}


.confirm_box {
  width: 100%;
  height: 122rpx;
  padding-top: 24rpx;
  background: #fff;
}

.confirm_btn{
  height: 98rpx;
  font-weight: 600;
  color: #ffffff;
  font-size: 32rpx;
  line-height: 98rpx;
  text-align: center;
  margin: 0 32rpx;
  background-color: #e5352f;
  border-radius: 16rpx;
}
