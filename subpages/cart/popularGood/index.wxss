page {
  background: #EA3327;
}

.container {
  padding-bottom: env(safe-area-inset-bottom);
  padding-bottom: constant(safe-area-inset-bottom);
}

.banner {
  width: 100vw;
  height: 320rpx;
}

.good_content {
  margin: 32rpx 24rpx 0;
}

.good_item {
  width: 100%;
  overflow: hidden;
  margin-bottom: 16rpx;
  background-color: #fff;
  border-radius: 16rpx;
}

.good_info {
  position: relative;
  flex: 1;
  height: 264rpx;
  padding-right: 20rpx;
  margin-left: 16rpx;
}

.good_title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  line-height: 44rpx;
  padding-top: 16rpx;
}

.margket_price {
  position: absolute;
  left: 0;
  bottom: 90rpx;
  font-size: 28rpx;
  color: #868686;
  line-height: 36rpx;
  /* text-decoration: line-through; */
}

.line_text {
  text-decoration: line-through;
}

.price_box {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  left: 0;
  justify-content: space-between;
}

.price_text {
  font-size: 44rpx;
  font-weight: bold;
  color: #EB0000;
  letter-spacing: 2rpx;
}

.mini_util {
  font-size: 30rpx;
}

.buy_btn {
  width: 144rpx;
  height: 64rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 64rpx;
  text-align: center;
  background: #FF000C;
  border-radius: 36rpx;
}