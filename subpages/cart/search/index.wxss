
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.page_back {
  background: linear-gradient(180deg, #fff 0%, #f5f5f5 100%);
}

.search_content {
  position: relative;
  flex-grow: 0;
  flex-shrink: 0;
}

.search_height {
  height: 96rpx;
}

.search_wrap {
  position: fixed;
  top: 0;
  z-index: 9;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 24rpx;
  background-color: #fff;
}

.good_type {
  position: relative;
  color: #333;
  font-size: 28rpx;
  line-height: 36rpx;
  padding-left: 24rpx;
  padding-right: 12rpx;
  border-right: 2rpx solid #ccc;
}

.type_icon {
  border: 8rpx solid transparent;
  border-bottom: 0;
  border-top-color: #333;
  margin-top: 4rpx;
  margin-left: 8rpx;
}

.select_type {
  position: absolute;
  top: 60rpx;
  left: 50%;
  flex-direction: column;
  width: 146rpx;
  background-color: #ffffff;
  box-shadow: 0rpx 0rpx 12rpx rgba(0, 0, 0, 0.2);
  transform: translateX(-45%);
}

