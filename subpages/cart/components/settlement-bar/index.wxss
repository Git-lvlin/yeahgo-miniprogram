
.settlement_conetnt {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 999;
  display: flex;
  align-items: center;
  width: calc(100% - 64rpx);
  height: 104rpx;
  padding-bottom: env(safe-area-inset-bottom);
  padding-bottom: constant(safe-area-inset-bottom);
  padding-left: 32rpx;
  padding-right: 32rpx;
  background-color: #f7f7f7;
}

.cart_icon {
  position: relative;
  margin-right: 32rpx;
}

.cart_num {
  position: absolute;
  top: -6rpx;
  right: -8rpx;
  z-index: 2;
  width: 32rpx;
  height: 32rpx;
  font-size: 20rpx;
  color: #C73E30;
  text-align: center;
  line-height: 32rpx;
  background: #FFF;
  border: 2rpx solid #C73E30;
  border-radius: 50%;
}

.settlement_price {
  flex: 1;
}

.price {
  display: flex;
  align-items: flex-end;
  font-size: 40rpx;
  color: #CC4636;
  line-height: 56rpx;
  font-weight: 600;
}

.unit {
  font-size: 28rpx;
  font-weight: 700;
}

.market_price {
  font-size: 28rpx;
  color: #999999;
  text-decoration: line-through;
  font-weight: 400;
  line-height: 50rpx;
  margin-left: 12rpx;
} 

.delivery {
  font-size: 22rpx;
  color: #999999;
}

.settlement_btn {
  width: 200rpx;
  height: 72rpx;
  font-size: 32rpx;
  color: #FFF;
  text-align: center;
  line-height: 72rpx;
  font-weight: 500;
  background-image: linear-gradient(144deg, #ED8065 0%, #D7291D 100%);
  border-radius: 36rpx;
}


.desc {
  height: 80rpx;
  font-size: 20rpx;
  color: #333333;
  text-align: center;
  padding-top: 12rpx;
  margin-bottom: 32rpx;
  background: #FFF4F0;
}

.gary {
  color: #666;
}

.goods_head {
  display: flex;
  align-items: center;
  padding: 0 30rpx 10rpx;
}

.select_icon {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 18rpx;
}

.all_text {
  font-size: 28rpx;
  color: #000000;
  line-height: 40rpx;
  font-weight: 500;
}

.goods_num {
  flex: 1;
  font-size: 20rpx;
  color: #666666;
  line-height: 40rpx;
}

.clear {
  display: flex;
  font-size: 24rpx;
  color: #999999;
  line-height: 36rpx;
}

.clear_icon {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  margin-right: 2rpx;
}

.goods_list {
  width: 100%;
  height: 626rpx;
}

.list_icon {
  flex-grow: 0;
  flex-shrink: 0;
  margin-right: 16rpx;
}

.good_item {
  display: flex;
  align-items: center;
  width: calc(100% - 30rpx);
  padding-left: 30rpx;
  overflow: hidden;
}

.good_card {
  flex: 1;
  padding-right: 24rpx;
}
