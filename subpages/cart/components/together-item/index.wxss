

.together_item {
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  height: 120rpx;
  background-color:#ffffff;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
}

.border {
  border: 2rpx solid #F3F3F3;
}

.dispaly_fix {
  flex-grow: 0;
  flex-shrink: 0;
}

.cover {
  vertical-align: middle;
  width: 72rpx;
  height: 72rpx;
  overflow: hidden;
  border-radius: 50%;
  margin-right: 12rpx;
}

.user_name {
  flex: 1;
  color: #000000;
  font-size: 28rpx;
  line-height: 40rpx;
  padding-right: 16rpx;
}

.max_width {
  max-width: 224rpx;
}

.user_num {
  color: #333333;
  font-size: 28rpx;
  letter-spacing: 1.17rpx;
  line-height: 40rpx;
  text-align: right;
  margin-right: 12rpx;
}

.text_left {
  text-align: left;
}

.red {
  color: #FF0000;
}

.last_time {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #666666;
  /* width: 176rpx; */
  font-size: 28rpx;
  /* letter-spacing: 1.17rpx; */
  line-height: 40rpx;
  padding-right: 12rpx;
}

.btn {
  display: flex; 
  align-items: center;
  justify-content: center;
  width: 150rpx;
  height: 64rpx;
  color: #fff;
  font-size: 28rpx;
  margin-left: auto;
  background-color: #FF0000;
  border-radius: 8rpx;
}

.right_arrow {
  width: 12rpx;
  height: 12rpx;
  border-top: 4rpx solid #FFF;
  border-right: 4rpx solid #FFF;
  transform: rotate(45deg);
}
button {
  border: none;
  background-color: #FF0000;
  padding: 0;
  margin: 0;
  min-height: 0;
  min-width: 0;
}
.button_box {
  position: relative;
  width: 150rpx;
  height: 64rpx;
  overflow: hidden;
  margin-left: auto;
  background-color: #FF0000;
  border-radius: 8rpx;
}
.button_index {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.share_sm_btn {
  position: absolute;
  top: 0;
  left: 0;
  display: flex; 
  align-items: center;
  justify-content: center;
  width: 150rpx;
  height: 64rpx;
  color: #fff;
  font-size: 28rpx;
  margin-left: auto;
  background-color: #FF0000;
  border-radius: 8rpx;
}
