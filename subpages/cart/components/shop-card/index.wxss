
.shop {
  padding: 32rpx 0 0 32rpx;
  margin-bottom: 24rpx;
  background-color: #fff;
  border-radius: 24rpx;
}

.shop_info {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.shop_icon {
  height: 48rpx;
  overflow: hidden;
}

.shop_name {
  font-weight: 500;
  color: #333333;
  font-size: 30rpx;
  line-height: 42rpx;
  margin-left: 16rpx;
}

.goods_list {
  border-bottom: 2rpx solid #f5f5f5;
}

.item {
}

.good_img {
  flex-grow: 0;
  flex-shrink: 0;
  height: 180rpx;
  margin-right: 24rpx;
  overflow: hidden;
}

.info {
  flex: 1;
  overflow: hidden;
}

.title {
  font-weight: 500;
  color: #333333;
  font-size: 26rpx;
  line-height: 36rpx;
  padding-right: 32rpx;
  margin-bottom: 8rpx;
}

.sku_name {
  height: 30rpx;
  color: #999999;
  font-size: 22rpx; 
  line-height: 30rpx;
  margin-bottom: 24rpx;
}

.market_price {
  height: 40rpx;
  font-size: 28rpx;
  color: #868686;
  line-height: 40rpx;
  /* text-decoration: line-through;*/
}

.line_text {
  text-decoration: line-through;
}

.price {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-weight: 600;
  color: #E5352F;
  font-size: 28rpx;
  line-height: 40rpx;
  padding-right: 32rpx;
}

.num_controller {
  display: flex;
  align-items: center;
  justify-content: center;
}

.controller {
  width: 56rpx;
  height: 56rpx;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 56rpx;
  text-align: center;
  border-top: 2rpx solid #999;
  border-bottom: 2rpx solid #999;
}

.reduce_num {
  border-left: 2rpx solid #999;
  border-radius: 16rpx 0 0 16rpx;
}

.num_icon {
  width: 20rpx;
  vertical-align: middle;
}

.number {
  width: 86rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  border: 2rpx solid #999;
}

.add_num {
  border-right: 2rpx solid #999;
  border-radius: 0 16rpx 16rpx 0;
}

.total_price {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 27rpx 32rpx 24rpx 0;
}

.note_box {
  justify-content: space-between;
  color: #333333;
  font-size: 28rpx;
  line-height: 40rpx;
  padding: 32rpx 0;
  margin-right: 32rpx;
}

.note_input {
  flex: 1;
  height: 40rpx;
  padding: 0;
  line-height: 40rpx;
  text-align: right;
}

.ipunt_desc {
  color: #bdbdbd;
}

.txt {
  color: #333333;
  font-size: 28rpx;
  line-height: 40rpx;
}

.text {
  font-weight: 600;
  color: #e5352f;
  font-size: 28rpx;
  line-height: 40rpx;
}

.min_price {
  font-size: 20rpx;
}

.freight {
  color: #999999;
  font-size: 24rpx;
  line-height: 34rpx;
  margin-left: 16rpx;
}