

.popup {
  min-height: 20%;
}

.coupon_content {
  display: flex;
  flex-direction: column;
  height: 1022rpx;
}

.coupon_head {
  padding-top: 32rpx;
}

.title {
  font-weight: 600;
  color: #333333;
  font-size: 36rpx;
  line-height: 50rpx;
  padding-right: 32rpx;
  padding-left: 32rpx;
  margin-bottom: 52rpx;
}

.tab_list {
  position: relative;
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.tab_item {
  width: 50%;
  height: 72rpx;
  color: #333333;
  font-size: 28rpx;
  line-height: 72rpx;
  text-align: center;
}

.active_line {
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 80rpx;
  height: 8rpx;
  margin-left: -40rpx;
  background-color: #e5352f;
  border-radius: 6rpx;
  transition: left 0.3s ease-in-out;
}

.active_line_right {
  left: 75%;
}

.choose_coupon {
  color: #333333;
  font-size: 24rpx;
  line-height: 34rpx;
  padding: 24rpx 32rpx;
  border-top: 2rpx solid #f5f5f5;
}

.coupon_money {
  color: #e5352f;
}

.coupon_list {
  flex: 1;
  width: 100%;
  height: 700rpx;
  box-sizing: border-box;
  padding: 24rpx 32rpx;
  background-color: #f5f5f5;
}

.comfirm_btn {
  box-sizing: border-box;
  width: 100%;
  height: 100rpx;
  padding: 12rpx 32rpx;
  background-color:#ffffff;
}

.btn {
  width: 100%;
  height: 76rpx;
  font-weight: 600;
  color: #ffffff;
  font-size: 28rpx;
  line-height: 76rpx;
  text-align: center;
  background-image: linear-gradient(270deg,#fb5f2a 0%,#e5352f 100%);
  border-radius: 76rpx;
}

.def_btn {
  color: #aaa;
  background: #eee;
}

.no_list {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  color: #666;
}