.space_20 {
  height: 20rpx;
  background-color: #f5f5f5;
}

.head {
  justify-content: space-between;
  padding: 40rpx 24rpx 0;
}

.head_title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333333;
  line-height: 48rpx;
  letter-spacing: 2rpx;
}

.more {
  font-size: 30rpx;
  color: #FE915D;
  line-height: 48rpx;
  margin-right: 8rpx;
}

.more_right {
  width: 12rpx;
  height: 12rpx;
  border-top: 2rpx solid #FE915D;
  border-right: 2rpx solid #FE915D;
  transform: rotate(45deg) translate(-4rpx);
}

.eveluate_item {
  padding: 40rpx 32rpx;
}

.eveluate_item:not(:last-child) {
  border-bottom: 2rpx solid #eee;
}

.evaluate_user {
  margin-bottom: 24rpx;
}

.user_avtar {
  width: 74rpx;
  height: 74rpx;
  vertical-align: middle;
  border-radius: 50%;
}

.user_name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  line-height: 44rpx;
  margin-left: 16rpx;
}

.comment_time {
  font-size: 24rpx;
  color: #999999;
  line-height: 34rpx;
  margin-top: 4rpx;
}

.evaluate_info {
  font-size: 32rpx;
  color: #333333;
  line-height: 36rpx;
  white-space: pre-wrap;
}

.nodata {
  padding: 40rpx 0;
}