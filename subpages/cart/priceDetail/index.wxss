page {
  background-color: #f5f5f5;
}

.panle_title {
  font-weight: 600;
  color: #333333;
  font-size: 32rpx;
  line-height: 44rpx;
}

.good_box {
  display: flex;
  padding: 48rpx 24rpx 32rpx;
  background-color: #fff;
  border-top: 2rpx #eee solid ;
}

.good_image {
  margin-right: 32rpx;
}

.good_info {
  flex: 1;
  overflow: hidden;
}

.good_title {
  font-weight: 600;
  color: #333333;
  font-size: 28rpx;
  line-height: 40rpx;
  margin-bottom: 8rpx;
}

.good_desc {
  color: #999999;
  font-size: 22rpx;
  line-height: 30rpx;
  margin-bottom: 16rpx;
}

.info_label {
  display: inline-flex;
  height: 36rpx;
  padding-right: 24rpx;
  border-radius: 18rpx;
}

.ranking_label {
  background-image: linear-gradient(90deg, #fdf6f2 0%, #fdf6f2 100%);
  margin-bottom: 8rpx;
}

.sale_label {
  background-image: linear-gradient(90deg, #fdf1f4 0%, #fdf1f4 100%);
  margin-bottom: 24rpx;
}

.info_label .label_icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.label_text {
  color:#333333;
  font-size: 26rpx;
  line-height: 36rpx;
}

.price_box {
  justify-content: space-between;
}

.buy_btn {
  width: 118rpx;
  height: 58rpx;
  font-weight: 600;
  color: #ffffff;
  font-size: 26rpx;
  line-height: 58rpx;
  text-align: center;
  background-color: #e5352f;
  border-radius: 8rpx;
}

.price_trend {
  margin-top: 24rpx;
  background-color: #fff;
}

.echart_box_title {
  padding: 32rpx 24rpx;
}

.echart_box {
  width: 100%;
  padding-bottom: 32rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.price_module {
  overflow: hidden;
  margin: 0 24rpx 32rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.price_module_item {
  width: 174rpx;
  padding: 24rpx 0;
  text-align: center;
}

.price_module_line {
  width: 2rpx;
  height: 62rpx;
  background-color: #eeeeee;
}

.price_module_text {
  font-weight: 700;
  color: #333333;
  font-size: 30rpx;
  line-height: 40rpx;
  margin-bottom: 6rpx;
}

.red_text {
  color: #e5352f;
}

.price_module_name {
  color: #666666;
  font-size: 22rpx;
  line-height: 32rpx;
}

.canvas {
  width: 100%;
  height: 350rpx;
}

.data_desc {
  color: #999999;
  font-size: 24rpx;
  line-height: 34rpx;
  padding-left: 24rpx;
}

.data_desc_icon {
  width: 22rpx;
  height: 22rpx;
  margin-left: 24rpx;
}


.other_price {
  padding: 48rpx 24rpx 0;
  background-color: #fff;
}

.other_price_bottom {
  padding-bottom: 48rpx;
}

.other_price_btn {
  width: 500rpx;
  height: 80rpx;
  font-weight: 600;
  color: #e5352f;
  font-size: 32rpx;
  line-height: 44rpx;
  background-color: #ffffff;
  margin: 0 auto 8rpx;
  border: 2rpx solid #e5352f;
  border-radius: 40rpx;
}

.price_btn_icon {
  width: 20rpx;
  height: 16rpx;
  margin-left: 8rpx;
  transition: transform 0.3s ease-in-out;
}

.btn_icon_act {
  transform: rotate(180deg);
}

.other_price_item {
  padding: 40rpx 0;
}

.other_price_item:not(:last-child) {
  border-bottom: 2rpx solid #f5f5f5;
}

.other_price_icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.other_name {
  flex: 1;
  color: #333333;
  font-size: 32rpx;
  line-height: 44rpx;
}

.other_price_text {
  font-weight: 600;
  color: #e5352f;
  font-size: 32rpx;
  line-height: 44rpx;
}

.price_reduction {
  padding: 32rpx 24rpx;
  margin-top: 24rpx;
  background-color: #fff;
}

.price_reduction_head {
  margin-bottom: 32rpx;
}

.reduction_head_desc {
  color: #999999;
  font-size: 24rpx;
  line-height: 34rpx;
  margin-left: 16rpx;
}

.set_price {
  overflow: hidden;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.input_box {
  flex: 1;
  height: 84rpx;
  font-weight: 600;
  color: #333333;
  font-size: 30rpx;
  line-height: 42rpx;
  padding-left: 32rpx;
  background-color: #f5f5f5;
}

.input {
  flex: 1;
  height: 42rpx;
  line-height: 42rpx;
  margin-left: 8rpx;
  margin-right: 8rpx;
}

.set_price_btn {
  width: 138rpx;
  height: 84rpx;
  color: #ffffff;
  font-size: 28rpx;
  line-height: 84rpx;
  text-align: center;
  background-color: #e5352f;
}

.price_desc_icon {
  width: 26rpx;
  height: 26rpx;
  margin-right: 8rpx;
}

.price_desc {
  color: #333333;
  font-size: 24rpx;
  line-height: 34rpx;
}

.low_price {
  padding: 32rpx 24rpx;
  margin-top: 24rpx;
  background-color: #fff;
}

.low_price_list {
  margin-top: 32rpx;
}

.low_price_item:not(:last-child) {
  margin-bottom: 48rpx;
}

.img_box {
  overflow: hidden;
  margin-right: 32rpx;
  border-radius: 16rpx;
}

.reduction_proportion {
  width: 200rpx;
  height: 44rpx;
  color: #ffffff;
  font-size: 24rpx;
  line-height: 44rpx;
  text-align: center;
  background-image: linear-gradient(92.05deg, #eb6c51 0%, #ec4d34 100%);
}

.price_num {
  color: #999999;
  font-size: 24rpx;
  letter-spacing: 1.2rpx;
  line-height: 34rpx;
  margin-bottom: 16rpx;
}