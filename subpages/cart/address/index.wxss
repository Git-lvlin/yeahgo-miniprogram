
page {
  background-color: #f5f5f5;
}

.address_item {
  padding: 48rpx 32rpx 32rpx;
  margin-top: 32rpx;
  background-color: #fff;
  border-radius: 24rpx;
  box-shadow: 0rpx 8rpx 16rpx rgba(0, 0, 0, 0.01);
}

.address_head {
  display: flex;
  align-items: center;
  padding-bottom: 32rpx;
  border-bottom: 2rpx solid #eee;
}

.address_info {
  flex: 1;
  overflow: hidden;
  margin-right: 50rpx;
}

.author {
  font-weight: 600;
  color: #333333;
  font-size: 36rpx;
  line-height: 50rpx;
  margin-bottom: 18rpx;
}

.phone {
  font-weight: 400;
  color: #999999;
  font-size: 28rpx;
  line-height: 40rpx;
  padding-left: 16rpx;
}

.address {
  max-height: 84rpx;
  color: #333333;
  font-size: 28rpx;
  line-height: 42rpx;
}

.def_address{
  color: #e5352f;
  font-size: 24rpx;
  line-height: 42rpx;
  padding: 4rpx 8rpx;
  margin-right: 8rpx;
  background-color: rgba(229, 53, 47, 0.1);
  border-radius: 8rpx;
}

.edit_icon {
  flex-grow: 0;
  flex-shrink: 0;
  width: 40rpx;
  height: 40rpx;
}

.address_footer {
  display: flex;
  align-items: center;
  padding-top: 16rpx;
}

.choose_icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.footer_text {
  color: #666666;
  font-size: 28rpx;
  line-height: 40rpx;
}


.add_content {
  width: 100%;
  height: 96rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.btn {
  position: fixed;
  left: 24rpx;
  bottom: calc(constant(safe-area-inset-bottom) + 60rpx);
  bottom: calc(env(safe-area-inset-bottom) + 60rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  width: 702rpx;
  height: 96rpx;
  font-weight: 600;
  color: #ffffff;
  font-size: 32rpx;
  line-height: 48rpx;
  background-color: #e5352f;
  border-radius: 16rpx;
  box-shadow: 0rpx 6rpx 12rpx rgba(229, 53, 47, 0.4);
}

.btn_icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}


.no_data_btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 494rpx;
  height: 96rpx;
  font-weight: 500;
  color: #ffffff;
  font-size: 32rpx;
  line-height: 96rpx;
  margin: 80rpx auto 0;
  background-color: #e5352f;
  border-radius: 48rpx;
  box-shadow: 0rpx 6rpx 12rpx rgba(229, 53, 47, 0.4);
}