page {
  background-color: #F5F5F5;
}

.evaluate_item {
  padding: 32rpx 32rpx 48rpx;
  background-color: #fff;
}

.label_box {
  flex-wrap: wrap;
  padding: 24rpx 24rpx 8rpx;
  background-color: #fff;
}

.label_item {
  height: 56rpx;
  font-size: 32rpx;
  color: #666;
  line-height: 56rpx;
  padding: 0 24rpx;
  margin-right: 24rpx;
  margin-bottom: 16rpx;
  background: #F5F5F5;
  border-radius: 28rpx;
}

.label_item_act {
  color: #FF3333;
  background: #FBECEA;
}


.evaluate_item {
  margin-top: 24rpx;
}

.evaluate_head {
  margin-bottom: 24rpx;
}

.user_avatar {
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
  border-radius: 50%;
}

.user_info {
  flex: 1;
  margin-left: 16rpx;
}

.user_name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  line-height: 40rpx;
  margin-bottom: 4rpx;
}

.evaluate_time {
  font-size: 24rpx;
  color: #999999;
  line-height: 34rpx;
}

.user_star {
  align-self: flex-start;
  font-size: 24rpx;
  color: #999999;
  line-height: 28rpx;
}

.user_star_act {
  color: #FE915D;
} 

.fabulous_img {
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
  margin-right: 8rpx;
}

.evaluate_text {
  font-size: 32rpx;
  color: #333333;
  line-height: 36rpx;
  white-space: pre-wrap;
  margin-bottom: 24rpx;
}

.img_list {
  flex-wrap: wrap;
  padding-bottom: 8rpx;
}

.img_item {
  width: 178rpx;
  height: 178rpx;
  vertical-align: middle;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
}

.evaluate_good {
  font-size: 24rpx;
  color: #999999;
  line-height: 34rpx;
}


.store_msg {
  font-size: 28rpx;
  color: #333333;
  padding: 16rpx 24rpx;
  margin-top: 32rpx;
  background: #F5F5F5;
  border-radius: 16rpx;
}

.store_msg_item:not(:last-child) {
  margin-bottom: 24rpx;
}

.store_msg_label {
  font-size: 20rpx;
  font-weight: 600;
  color: #FF3333;
  line-height: 32rpx;
  padding: 0 12rpx;
  background: rgba(255, 51, 51, 0.1);
  border-radius: 4rpx;
  border: 2rpx solid #FF3333;
}

.store_name {
  font-weight: 600;
  line-height: 32rpx;
  padding-left: 8rpx;
}

.bottom_text {
  font-size: 24rpx;
  color: #999999;
  line-height: 34rpx;
  text-align: center;
  padding: 24rpx 0 62rpx;
}

.button_back {
  height: 136rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.btn_box {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 136rpx;
  background: #FFFFFF;
}

.btn_buy {
  width: 702rpx;
  height: 88rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 88rpx;
  text-align: center;
  background: linear-gradient(270deg, #EB0000 0%, #FE785D 100%);
  border-radius: 88rpx;
}