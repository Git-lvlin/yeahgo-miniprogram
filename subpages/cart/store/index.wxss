page {
  background-color: #f5f5f5;
}

.store_head {
  position: relative;
  padding: 32rpx;
  background-color: #fff;
}

.store_box {
  flex: 1;
  overflow: hidden;
  margin-left: 20rpx;
}

.store_name {
  font-weight: 600;
  color: #333333;
  font-size: 36rpx;
  line-height: 50rpx;
  margin-bottom: 12rpx;
}

.store_good {
  color: #666666;
  font-size: 28rpx;
}

.contact {
  position: absolute;
  right: 32rpx;
  bottom: 32rpx;
  width: 160rpx;
  height: 56rpx;
  font-weight: 600;
  color: #e5352f;
  font-size: 24rpx;
  border: 2rpx solid #e5352f;
  border-radius: 8rpx;
}

.envelope_icon {
  width: 28rpx;
  height: 24rpx;
  margin-right: 10rpx;
}

.store_good_content {
  position: relative;
  margin-top: 16rpx;
}

.store_good_head {
  position: sticky;
  top: 0;
  z-index: 9;
  padding-top: 12rpx;
  background-color: #fff;
}

.good_class {
  height: 92rpx;
  color: #666666;
  font-size: 32rpx;
  line-height: 92rpx;
  text-align: center;
  background-color: #fff;
  border-bottom: 2rpx solid #f5f5f5;
}

.store_good_list {
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 24rpx;
}