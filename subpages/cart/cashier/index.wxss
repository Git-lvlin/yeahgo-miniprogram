
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}
.canvas_box {
  position: relative;
}
.share_canvas {
  position: fixed;
  /* left: 50%; */
  left: -200%;
  /* top: -50%; */
  /* z-index: 9; */
  /* transform: translate(-50%, -50%); */
}
.nav_back {
  flex-grow: 0;
  flex-shrink: 0;
}

.content {
  position: relative;
  width: 100%;
  flex: 1;
  overflow: hidden;
}

.content_gray {
  background-color: #f5f5f5;
}

.def_head_back {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 260rpx;
  background: #FA0D1E;
}

.head {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 284rpx;
  /* background: #FA0D1E; */
  background-size: 100% auto;
  background-position: left bottom;
}

.pay_time {
  display: flex;
  align-items: flex-start;
  color: #ffffff;
  font-size: 24rpx;
  line-height: 40rpx;
  margin-top: 32rpx;
}

.time_item {
  color: #fff;
}


.pay_content {
  padding-top: 58rpx;
  padding-left: 32rpx;
}

.pay_title {
  font-weight: 600;
  color: #000000;
  font-size: 28rpx;
  line-height: 40rpx;
  margin-bottom: 32rpx;
}

.pay_item {
  display: flex;
  align-items: center;
  padding: 32rpx 32rpx 32rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}

.pay_icon {
  width: 48rpx;
  height: 48rpx;
}

.pay_name {
  flex: 1;
  color: #333333;
  font-size: 28rpx;
  line-height: 40rpx;
  margin-left: 24rpx;
}

.pay_choose {
  width: 32rpx;
  height: 32rpx;
}

.bottom_confirm {
  width: 686rpx;
  height: 96rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.comfirm_btn {
  position: fixed;
  bottom: calc(constant(safe-area-inset-bottom) + 20rpx);
  bottom: calc(env(safe-area-inset-bottom) + 20rpx);
  left: 32rpx;
  width: 686rpx;
  height: 96rpx;
  font-weight: 600;
  color: #ffffff;
  font-size: 32rpx;
  line-height: 96rpx;
  text-align: center;
  background-color:#e5352f;
  border-radius: 16rpx;
  box-shadow: 0rpx 6rpx 12rpx rgba(229, 53, 47, 0.4);
}


/* 支付成功 */
.success_head {
  position: relative;
  z-index: 2;
  width: 100%;
  height: 420rpx;
  background-size: 100% auto;
  background-position: left bottom;
}

.success_tip {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 230rpx;
}

.success_img {
  width: 148rpx;
  height: 114rpx;
  margin-right: 16rpx;
}

.success_title {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  line-height: 40rpx;
}

.success_title .text {
  font-weight: 600;
  color: #ffffff;
  font-size: 40rpx;
  line-height: 56rpx;
  margin-bottom: 2rpx;
}

.success_price {
  display: flex;
  justify-content: center;
  margin-top: 100rpx;
}

.order_info {
  width: 606rpx;
  padding: 47rpx 32rpx 32rpx;
  margin: 0 auto;
  background-color: #fff;
  box-shadow: 0rpx 4rpx 8rpx rgba(0, 0, 0, 0.03);
}

.info_item {
  color: #999999;
  font-size: 26rpx;
  line-height: 36rpx;
  margin-bottom: 32rpx;
}

.info_text {
  color: #333;
}

.day_red {
  position: relative;
  text-align: center;
}

.red_back {
  width: 666rpx;
  height: 880rpx;
  vertical-align: middle;
}

.red_close_box {
  width: 70rpx;
  height: 70rpx;
  margin: 50rpx auto 0;
  border: 4rpx solid #777;
  border-radius: 50%;
}

.red_colse {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}

.red_content {
  position: absolute;
  top: 360rpx;
  right: 60rpx;
  left: 80rpx;
  bottom: 120rpx;
}

.price_text {
  font-size: 176rpx;
  /* font-weight: 600; */
  color: #986E40;
  line-height: 176rpx;
}

.util_text {
  font-size: 81rpx;
  /* font-weight: 600; */
  color: #986E40;
  line-height: 81rpx;
  margin-left: 8rpx;
}

.red_time_item {
  position: absolute;
  left: 50%;
  bottom: 40rpx;
  font-size: 28rpx;
  color: #FAE3AB;
  line-height: 40rpx;
  transform: translateX(-50%);
}

.act_btn {
  position: absolute;
  bottom: 98rpx;
  left: 50%;
  width: 144rpx;
  height: 144rpx;
  transform: translateX(-50%);
}

.btn_list {
  justify-content: space-between;
  padding: 24rpx 48rpx;
}

.btn_item {
  width: 312rpx;
  height: 80rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  line-height: 80rpx;
  text-align: center;
  border-radius: 80rpx;
}

.item_finish {
  border: 2rpx solid #CCCCCC;
  background-color: #ffffff;
}

.item_download {
  color: #fff;
  background: #FA0D1E;
}

.finish_desc {
  font-size: 22rpx;
  color: #999999;
  line-height: 32rpx;
  text-align: center;
  margin-top: 48rpx;
}



.collage_popup {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 654rpx;
  height: 558rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
}
.collage_text {
  /* margin-top: 24rpx; */
  margin-bottom: 24rpx;
  font-size: 36rpx;
  color: #000000;
  line-height: 50rpx;
}

.red {
  color: #FF0000;
}
.collage_share_btn {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 42rpx;
  width: 486rpx;
  height: 82rpx;
  border-radius: 32rpx;
  background-color: #FF0000;
  text-align: center;
  line-height: 82rpx;
  color: #ffffff;
  font-size: 32rpx;
}
.collage_time {
  display: flex;
  justify-content: center;
  align-items: center;
}
.time_left {
  margin-right: 6rpx;
  color: #666666;
  font-size: 36rpx;
}
.p1 {
  margin: 0 auto;
  text-align: center;
  color: #FF0000;
}

