page {
  background-color: #f5f5f5;
}

.evaluate_item {
  padding: 32rpx 0 48rpx;
  background-color: #fff;
}

.label_box {
  flex-wrap: wrap;
  padding: 24rpx 24rpx 8rpx;
  background-color: #fff;
}

.label_item {
  height: 56rpx;
  font-size: 32rpx;
  color: #666;
  line-height: 56rpx;
  padding: 0 24rpx;
  margin-right: 24rpx;
  margin-bottom: 16rpx;
  background: #F5F5F5;
  border-radius: 28rpx;
}

.label_item_act {
  color: #FF3333;
  background: #FBECEA;
}

.evaluate_head {
  padding: 0 32rpx;
  margin-bottom: 24rpx;
}

.user_avatar {
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
  border-radius: 50%;
}

.user_info {
  flex: 1;
  margin-left: 16rpx;
}

.user_name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  line-height: 40rpx;
  margin-bottom: 4rpx;
}

.evaluate_time {
  font-size: 24rpx;
  color: #999999;
  line-height: 34rpx;
}

.user_star {
  align-self: flex-start;
  font-size: 24rpx;
  color: #999999;
  line-height: 28rpx;
}

.user_star_act {
  color: #FE915D;
} 

.fabulous_img {
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
  margin-right: 8rpx;
}

.evaluate_text {
  font-size: 32rpx;
  color: #333333;
  line-height: 36rpx;
  white-space: pre-wrap;
  padding: 0 32rpx;
  margin-bottom: 24rpx;
}

.img_list {
  padding: 0 10rpx 0 32rpx;
  flex-wrap: wrap;
  padding-bottom: 2rpx;
}

.img_item {
  width: 220rpx;
  height: 220rpx;
  vertical-align: middle;
  margin-right: 14rpx;
  margin-bottom: 14rpx;
}

.evaluate_sku {
  padding: 0 32rpx;
  font-size: 24rpx;
  color: #999999;
  line-height: 34rpx;
}


.good_box {
  padding: 0 32rpx;
  margin-top: 24rpx;
}

.good_img {
  width: 146rpx;
  height: 146rpx;
  vertical-align: middle;
}

.good_info {
  flex: 1;
  display: flex;
  height: 114rpx;
  flex-direction: column;
  justify-content: space-between;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  line-height: 40rpx;
  padding: 16rpx;
  background: #F8F8F8;
}


.store_msg {
  margin-top: 24rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
}

.store_msg_head {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  line-height: 40rpx;
  padding: 24rpx;
}

.msg_list {
  padding: 32rpx 32rpx 48rpx;
  border-top: 2rpx solid #eee;
}

.msg_item {
  display: flex;
}

.store_avater {
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
  margin-right: 16rpx;
  border-radius: 50%;
}

.store_name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  line-height: 40rpx;
  margin-bottom: 4rpx;
}

.msg_time {
  font-size: 24rpx;
  color: #999999;
  line-height: 34rpx;
  margin-bottom: 16rpx;
}

.msg_text {
  font-size: 28rpx;
  color: #333333;
  line-height: 40rpx;
}

.msg_item:not(:last-child) {
  margin-bottom: 50rpx;
}