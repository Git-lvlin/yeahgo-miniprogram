
.cart_card {
  width: 100%;
  overflow: hidden;
  margin-bottom: 24rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0rpx 8rpx 16rpx rgba(0, 0, 0, 0.01);
}

.select_content {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 24rpx 24rpx 0;
}

.head_content {
  margin-bottom: 16rpx;
}

.good_content {
  /* padding: 24rpx 0; */
}

.select_icon {
  flex-grow: 0;
  flex-shrink: 0;
  width: 36rpx;
  height: 36rpx;
  margin-right: 24rpx;
  transform: translateY(-12rpx);
}

.select_info {
  display: flex;
  align-items: center;
  flex: 1;
  overflow: hidden;
  padding-bottom: 24rpx;
}

.store_icon {
  vertical-align: middle;
  border-radius: 8rpx;
  overflow: hidden;
}

.store_name {
  font-weight: 600;
  color: #333333;
  font-size: 30rpx;
  line-height: 40rpx;
  margin-left: 8rpx;
}


.good_img {
  flex-grow: 0;
  flex-shrink: 0;
  vertical-align: middle;
  margin-right: 24rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.good_info {
  position: relative;
  flex: 1;
  overflow: hidden;
  height: 180rpx;
}

.good_title {
  font-weight: 500;
  color: #333333;
  font-size: 26rpx;
  line-height: 36rpx;
  margin-bottom: 8rpx;
}

.good_desc {
  color: #999999;
  font-size: 22rpx;
  line-height: 30rpx;
}

.price_info {
  position: absolute;
  bottom: 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.good_price {
  /* flex: 1; */
  font-weight: 500;
  color: #333333;
  font-size: 28rpx;
  line-height: 40rpx;
}


.right_content {
  display: flex;
  align-items: center;
  color: #ffffff;
  font-size: 24rpx;
  line-height: 28rpx;
  text-align: center;
}

.right_btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 150rpx;
  height: 228rpx;
}

.collection {
  background-color: #ed762f;
}

.delete {
  background-color: #ea4e3d;
}