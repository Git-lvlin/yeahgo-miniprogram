.spec_content {
  padding-top: 24rpx;
}

.spec_head {
  display: flex;
  align-items: flex-end;
  padding-bottom: 26rpx;
  padding-right: 24rpx;
  padding-left: 24rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
}

.spec_img {
  height: 236rpx;
  margin-right: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.price {
  font-size: 32rpx;
  color: #D7291D;
  line-height: 66rpx;
  font-weight: 600;
}

.price .text {
  font-size: 48rpx;
}

.spec_box {
  height: 500rpx;
  overflow-y: auto;
  padding-top: 16rpx;
}

.spec_body {
  padding-left: 24rpx;
  padding-bottom: 20rpx;
}

.sku_head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #000000;
  font-weight: 500;
  margin-bottom: 14rpx;
}

.sku_list {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.item {
  flex-grow: 0;
  flex-shrink: 0;
  height: 56rpx;
  font-size: 24rpx;
  color: #000000;
  text-align: center;
  line-height: 56rpx;
  padding: 0 40rpx;
  margin: 0 24rpx 20rpx 0;
  background: #F2F2F2;
  border-radius: 56rpx;
}

.item_act {
  color: #D7291D;
  background: #F9D7D7;
}

.num {
  display: flex;
  align-items: center;
  color: #000;
  font-size: 32rpx;
  font-weight: 600;
  padding-right: 24rpx;
}

.controller {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 40rpx;
  height: 40rpx;
}

.controller_img {
  width: 24rpx;
  height: 24rpx;
  vertical-align: middle;
}

.gray_add {
  opacity: 0.15;
}

.value {
  min-width: 32rpx;
  height: 40rpx;
  font-size: 28rpx;
  color: #000000;
  font-weight: 400;
  line-height: 40rpx;
  text-align: center;
  padding: 0 20rpx;
  margin: 0 8rpx;
  background: #F2F2F2;
}

.btn_content {
  padding: 16rpx 32rpx;
  border-top: 2rpx solid rgba(0, 0, 0, 0.05);
}

.btn {
  width: 100%;
  height: 72rpx;
  font-size: 32rpx;
  color: #FFFFFF;
  text-align: center;
  font-weight: 500;
  line-height: 72rpx;
  background-image: linear-gradient(144deg, #ED8065 0%, #D7291D 100%);
  border-radius: 36px;
}

.def_btn {
  color: #777;
  background: #f0f0f0;
}