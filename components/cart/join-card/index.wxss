
.join_card {
  display: flex;
  align-items: center;
  /* width: 542rpx; */
  width: 100%;
  height: 160rpx;
  padding: 20rpx 24rpx 20rpx 0;
}

.join_card_border {
  border-bottom: 2rpx solid #EEE;
}

.good_img {
  flex-grow: 0;
  flex-shrink: 0;
}

.card_info {
  flex: 1;
  padding-left: 20rpx;
  overflow: hidden;
}

.title {
  width: 300rpx;
  height: 40rpx;
  font-size: 28rpx;
  color: #222;
  line-height: 40rpx;
}

.desc {
  width: 100%;
  height: 28rpx;
  font-size: 20rpx;
  color: #A4A4A4;
  margin-top: 8rpx;
}

.sale {
  width: 100%;
  height: 28rpx;
  font-size: 20rpx;
  color: #E7755C;
}

.price {
  display: flex;
  justify-content: space-between;
}

.text {
  display: flex;
  align-items: flex-end;
  font-size: 32rpx;
  color: #D7291D;
  line-height: 44rpx;
  font-weight: 600;
}

.unit {
  font-size: 24rpx;
  color: #D7291D;
  line-height: 40rpx;
  font-weight: 700;
}

.market_price {
  font-size: 20rpx;
  color: #B2B2B2;
  text-decoration: line-through;
  line-height: 36rpx;
  margin-left: 8rpx;
}

.num_controller {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.icon {
  width: 48rpx;
  height: 48rpx;
  vertical-align: middle;
}

.num_input {
  width: 44rpx;
  height: 48rpx;
  font-size: 28rpx;
  color: #000000;
  line-height: 48rpx;
  text-align: center;
  padding: 0;
  margin: 0 8rpx;
}

.right_space {
  flex-grow: 0;
  flex-shrink: 0;
  width: 16rpx;
  height: 160rpx;
}