
.coupon_price_popup {
  width: 100%;
  /* height: 552rpx; */
  padding-bottom: 0;
}

.price_popup_title {
  font-weight: 600;
  color: #333333;
  font-size: 32rpx;
  line-height: 44rpx;
  text-align: center;
  padding-top: 32rpx;
  margin-bottom: 64rpx;
}

.coupon_desc {
  color: #999;
  font-size: 24rpx;
  line-height: 32rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.popup_cell {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #333333;
  font-size: 28rpx;
  line-height: 40rpx;
  padding: 0 24rpx;
  margin-bottom: 32rpx;
}

.gray_text {
  color: #999999;
  font-size: 24rpx;
  line-height: 34rpx;
}

.red_cell {
  font-weight: 600;
  color: #e5352f;
  font-size: 32rpx;
  line-height: 44rpx;
}

.coupon_line {
  margin: 0 24rpx 32rpx;
  border-top: 2rpx dashed #ccc;
}