
.store_box {
  padding: 24rpx;
}

.store_img {
  width: 88rpx;
  height: 88rpx;
  overflow: hidden;
}

.store_info {
  flex: 1;
  margin-left: 16rpx;
}

.store_name {
  font-weight: 600;
  color: #333333;
  font-size: 28rpx;
  line-height: 40rpx;
  margin-bottom: 8rpx;
}

.store_info_text {
  padding-left: 48rpx;
}

.store_data {
  color: #666666;
  font-size: 24rpx;
  line-height: 34rpx;
}

.store_btn {
  width: 140rpx;
  height: 44rpx;
  font-weight: 600;
  color: #d7291d;
  font-size: 24rpx;
  line-height: 44rpx;
  text-align: center;
  border: 2rpx solid #d7291d;
  border-radius: 22rpx;
}


.store_good {
  padding-left: 24rpx;
  padding-bottom: 24rpx;
}

.store_good_item {
  width: 224rpx;
  margin-right: 16rpx;
}

.good_cover {
  overflow: hidden;
  width: 224rpx;
  height: 224rpx;
  margin-bottom: 12rpx;
  background-color: #fff7f7;
  border-radius: 16rpx;
}

.good_name {
  color: #333333;
  font-size: 28rpx;
  line-height: 40rpx;
  margin-bottom: 8rpx
}

.sale_text {
  flex: 1;
  color: #999999;
  font-size: 24rpx;
  line-height: 30rpx;
  text-align: right;
}