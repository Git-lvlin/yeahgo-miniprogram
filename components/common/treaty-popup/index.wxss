
.popup {
  position: relative;
  width: 590rpx;
  padding: 80rpx 0;
}

.close {
  position: absolute;
  top: 0;
  right: 20rpx;
  display: flex;
  justify-content: center;
}

.line {
  position: absolute;
  top: 48rpx;
  width: 2rpx;
  height: 40rpx;
  background: #FFFFFF;
  /* border-radius: 16px; */
}

.content {
  padding: 48rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
}

.content .title {
  font-size: 32rpx;
  color: #333333;
  text-align: center;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.content .desc {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 32rpx;
}

.content_scroll {
  height: 490rpx;
}

.little_title {
  font-size: 28rpx;
  color: #333333;
  line-height: 36rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.info {
  font-size: 24rpx;
  color: #333333;
  line-height: 36rpx;
  white-space: pre-wrap;
}