<wxs module="tools" src="../../../wxs/common.wxs" />

<view class="popup">
  <view class="close" bindtap="onClose">
    <van-image width="48rpx" height="48rpx" src="{{tools.getImgUrl('miniprogram/common/white_close.png')}}" />
    <view class="line" />
  </view>
  <view class="content">
    <view class="title">{{title}}</view>
    <view class="desc">{{desc}}</view>
    <scroll-view class="content_scroll" scroll-y>
      <view class="little_title">特别提醒：</view>
      <view class="info">{{info}}</view>
    </scroll-view>
  </view>
</view>
