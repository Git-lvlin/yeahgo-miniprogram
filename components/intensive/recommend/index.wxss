

.list {
  padding: 0 24rpx;
  box-sizing: border-box;
}

.title-box {
  padding-top: 38rpx;
  padding-bottom: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.title {
  height: 50rpx;
  font-size: 36rpx;
  color: #333333;
  margin: 0 18rpx;
}
.after {
  color: #999999;
  font-size: 28rpx;
}

.tips-box {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 30px;
  background: #FFF9F1;
  border-radius: 8rpx 8rpx 0px 0px;
}
.tips-after {
  margin-right: 4rpx;
  width: 26rpx;
  height: 26rpx;
  border: 1px solid #FFB84B;
  border-radius: 50%;
  text-align: center;
  color: #FFB84B;
  font-size: 22rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tips-text {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFB84B;
}


.list-item {
  padding: 24rpx 24rpx 0 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #FFFFFF;
}
.img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.right-box {
  width: 412rpx;
  height: 200rpx;
  margin-left: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  position: relative;
}
.name {
  width: 100%;
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  line-height: 44rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 92rpx;
}
.price-box {
  display: flex;
  justify-content: flex-start;
}
.price1 {
  height: 44rpx;
  font-size: 32rpx;
  color: #D7291D;
  font-family: HelveticaNeue-Bold, HelveticaNeue;
  font-weight: bold;
  line-height: 44rpx;
  letter-spacing: 1rpx;
}
.price2 {
  margin-left: 10rpx;
  font-size: 20rpx;
  color: #B2B2B2;
  text-decoration: line-through;
  line-height: 52rpx;
  letter-spacing: .5rpx;
}
.span {
  font-size: 24rpx;
}
.btn {
  position: absolute;
  right: 0;
  bottom: 10rpx;
  width: 176rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #FEA319;
  border-radius: 30rpx;
  text-align: center;
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}
.ed {
  position: absolute;
  right: 0;
  bottom: 10rpx;
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #D8D8D8;
  border-radius: 30rpx;
  text-align: center;
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}
