
.beancurd {
  padding: 24rpx 24rpx 0;
}

.beancurd_content {
  position: relative;
  width: 100%;
  height: 230rpx;
  box-sizing: border-box;
  padding: 18rpx 0;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0rpx 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

.beancurd_scroll {
  width: 100%;
  height: 100%;
}

.beancurd_body {
  display: inline-flex;
  align-items: center;
  flex-wrap: nowrap;
  width: 100%;
  height: 100%;
}

.beancurd_list {
  flex-grow: 0;
  flex-shrink: 0;
  display: flex;
  /* justify-content: space-between; */
  /* flex-wrap: wrap; */
  width: 100%;
  height: 100%;
}

.beancurd_item {
  flex-grow: 0;
  flex-shrink: 0;
  width: 112rpx;
  padding: 0 14rpx;
}

.beancurd_img {
  width: 112rpx;
  height: 112rpx;
  margin-bottom: 12rpx;
}

.name {
  color: #333333;
  font-size: 24rpx;
  line-height: 34rpx;
  text-align: center;
}

.progress_back {
  position: absolute;
  bottom: 22rpx;
  left: 50%;
  width: 88rpx;
  height: 6rpx;
  background-color: #E0E0E0;
  border-radius: 6rpx;
  transform: translateX(-44rpx);
}

.progress {
  position: relative;
  width: 44rpx;
  height: 6rpx;
  background-color: #EB0000;
  border-radius: 6rpx;
}

.progress_full {
  width: 88rpx;
}