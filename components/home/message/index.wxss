
.message {
  padding: 24rpx 24rpx 0;
}

.message_content {
  width: 702rpx;
  height: 68rpx;
  box-sizing: border-box;
  padding: 20rpx;
  background-color:#ffffff;
  border-radius: 16rpx;
  box-shadow: 2rpx 0rpx 8rpx rgba(0, 0, 0, 0.02);
}

.msg_label {
  width: 64rpx;
  height: 36rpx;
  font-weight: 600;
  color: #ffffff;
  font-size: 24rpx;
  line-height: 36rpx;
  text-align: center;
  margin-right: 12rpx;
  background-color: #ea5534;
  border-radius: 6rpx;
}

.message_body {
  flex: 1;
  height: 32rpx;
  overflow: hidden;
}

.message_list {
  display: inline-block;
  overflow: hidden;
  width: 100%;
  height: 100%;
  color: #333333;
  font-size: 24rpx;
  line-height: 32rpx;
}