
.price_ratio {
  width: 702rpx;
  height: 450rpx;
  margin: 24rpx auto 0;
}

.price_header {
  width: 100%;
  height: 176rpx;
}

.good_list {
  height: 274rpx;
  padding-top: 12rpx;
  padding-left: 16rpx;
  background-size: 100% 100%;
}

.good_item {
  width: 156rpx;
  margin-right: 16rpx;
  background-color: #fff;
  border-radius: 8rpx;
}

.good_img {
  width: 156rpx;
  height: 156rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
  border-radius: 8rpx;
}

.label_select_text {
  width: 104rpx;
  height: 28rpx;
  color: #ffffff;
  font-size: 20rpx;
  line-height: 28rpx;
  text-align: center;
  margin: 0 auto;
  background-image: linear-gradient(270deg,#eb895a 0%, #e75451 100%);
  border-radius: 0rpx 16rpx 0rpx 16rpx;
}

.label_percent_text {
  justify-content: space-around;
  width: 104rpx;
  height: 28rpx;
  box-sizing: border-box;
  color: #ffffff;
  font-size: 20rpx;
  line-height: 28rpx;
  padding: 0 2rpx;
  margin: 0 auto;
  background-size: 100% 100%;
}

.margin_bottom_12 {
  margin-bottom: 12rpx;
}

.percent_text {
  color: #e75350;
  font-size: 20rpx;
  line-height: 28rpx;
}

.price {
  padding: 0 8rpx 12rpx;
}