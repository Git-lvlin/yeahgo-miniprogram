
.banner {
  position: relative;
  padding: 24rpx 24rpx 0;
}

.swiper {
  width: 702rpx;
  height: 300rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.swiper_item {
  width: 702rpx;
  height: 300rpx;
}

.banner_dots {
  position: absolute;
  bottom: 20rpx;
  z-index: 2;
  width: 702rpx;
}

.dots_item {
  box-sizing: border-box;
  width: 10rpx;
  height: 10rpx;
  border-radius: 10rpx;
  border: 2rpx solid #FFFFFF;
}

.dots_item:not(:last-child) {
  margin-right: 8rpx;
}

.dots_act {
  width: 18rpx;
  background: #EB483F;
  border: none;
  border-radius: 10rpx;
}