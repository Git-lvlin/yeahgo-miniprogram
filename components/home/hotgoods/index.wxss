
.hotgoods {
  margin: 24rpx 24rpx 0;
}

.head {
  display: flex;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  padding: 24rpx 16rpx 16rpx;
  background-size: 100% auto;
  /* background-position: 0 0; */
}

.hot_title {
  flex: 1;
  margin-left: 12rpx;
}

.hot_icon {
  width: 28rpx;
  height: 32rpx;
}

.good_list {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}

.good_item {
  flex-grow: 0;
  flex-shrink: 0;
}