
.second_class_popup {
  display: flex;
  flex-direction: column;
  width: 548rpx;
  height: 100vh;
}

.second_class_box {
  flex: 1;
  width: 100%;
  background-color: #FFF;
  border-radius: 0 16rpx 16rpx 0;
}


.nav_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 32rpx;
}

.nav_title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  line-height: 50rpx;
}

.nav_close {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}


.second_class_list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 8rpx;
}

.second_class_item {
  width: 176rpx;
  text-align: center;
  padding-top: 32rpx;
}

.class_icon {
  width: 128rpx;
  height: 128rpx;
  vertical-align: middle;
  margin-bottom: 16rpx;
}

.class_name {
  font-size: 24rpx;
  color: #333333;
  line-height: 34rpx;
}


.bottom_bar_height {
  width: 100%;
  height: 98rpx;
}