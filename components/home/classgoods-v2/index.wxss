
.classgood {
  padding: 24rpx 0 0;
}

.classgood_content {
  position: sticky;
  z-index: 5;
  top: 0;
  width: 100%;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.classgood_back {
  background-color: #f5f5f5;
}

.classgood_scroll {
  width: 100%;
}

.classgood_list {
  display: flex;
  padding-bottom: 24rpx;
}

.classgood_item {
  position: relative;
  height: 100%;
}

.classgood_item:not(:last-child) {
  margin-right: 40rpx;
}

.name {
  font-size: 32rpx;
  color: #333333;
  line-height: 44rpx;
  white-space: nowrap;
}

.name_act {
  font-size: 34rpx;
  font-weight: 600;
}

.act_line {
  position: absolute;
  left: 50%;
  bottom: -8rpx;
  width: 52rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #DE3232 0%, #FE888B 100%);
  box-shadow: 0 4rpx 8rpx 0 #FFB7B5;
  border-radius: 6rpx;
  transform: translateX(-50%);
}


.good_box {
  padding: 0 24rpx;
}

.second_class {
  flex-wrap: wrap;
  padding: 26rpx 10rpx;
  margin-bottom: 24rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 12rpx 0 rgba(0, 0, 0, 0.02);
}

.second_class_item {
  padding: 0 20rpx;
}

.second_class_icon {
  width: 96rpx;
  height: 96rpx;
  vertical-align: middle;
  margin-bottom: 16rpx;
}

.second_name {
  font-size: 24rpx;
  color: #333333;
  line-height: 34rpx;
  text-align: center;
}


