
.coupon {
  width: 100%;
  height: 322rpx;
  padding: 8rpx 24rpx 30rpx;
  box-sizing: border-box;
  background-size: 100% 100%;
  background-position: left bottom;
}

.coupon_list {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 126rpx;
  padding-top: 14rpx;
  margin: 0 6rpx;
}

.coupon_item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  width: 222rpx;
  height: 126rpx;
  background-size: 100% 100%;
}

.desc {
  color: #643820;
  font-size: 24rpx;
  line-height: 34rpx;
  padding-top: 10rpx;
  padding-bottom: 12rpx;
}

.receive {
  width: 352rpx;
  margin: 22rpx auto 0;
}

.receive_btn {
  /* width: 352rpx;
  height: 98rpx; */
  width: 320rpx;
  height: 89rpx;
  animation: receiveAction 1.4s ease-out infinite;
}

@keyframes receiveAction {
  0% {
    transform: scale(1);
  }
  20% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.15);
  }
  80% {
    transform: scale(1);
  }
  90% {
    transform: scale(1.15);
  }
  100% {
    transform: scale(1);
  }
}