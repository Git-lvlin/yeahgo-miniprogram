
.bar_container {
  position: relative;
  display: flex;
  align-items: center;
  height: 98rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  background-color: #FBFBFB;
}

.bar_item {
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.bar_icon {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  margin-bottom: 12rpx;
}

.bar_title {
  font-size: 20rpx;
  color: #333333;
  font-weight: 500;
}

.bar_title_act {
  color: #D7291D;
}

.intensive_icon {
  position: absolute;
  bottom: 4rpx;
  width: 192rpx;
  height: 142rpx;
}


.intensive_canvas {
  position: relative;
  width: 170rpx;
  height: 98rpx;
}

.canvas {
  position: absolute;
  bottom: 0;
  width: 180rpx;
  height: 160rpx;
}